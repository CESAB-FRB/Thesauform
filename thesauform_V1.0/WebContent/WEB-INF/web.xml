<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Thesauform refactoring</display-name>
  <welcome-file-list>
    <welcome-file>authentication</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>thesauform_admin</filter-name>
    <filter-class>thesauform.controller.administration.AdminAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>thesauform_admin</filter-name>
    <url-pattern>/administration/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>thesauform_admin</filter-name>
    <url-pattern>/administration</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>thesauform_expert</filter-name>
    <filter-class>thesauform.controller.expert.ExpertAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>thesauform_expert</filter-name>
    <url-pattern>/expert/*</url-pattern>
    <url-pattern>/DOC/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>thesauform_expert</filter-name>
    <url-pattern>/expert</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>thesauform_url</filter-name>
    <filter-class>thesauform.controller.UrlRewriteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>thesauform_url</filter-name>
    <url-pattern>/TRENVAS/*</url-pattern>
  </filter-mapping>
</web-app>